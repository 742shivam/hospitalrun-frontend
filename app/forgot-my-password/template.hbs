<div class="container">
  <form class="form-signin" role="form">

    <div class="signin-logo">
      {{partial "components/logo-dark-svg"}}
    </div>

    <div class="signin-contents">

      <h2 class="form-signin-heading">{{t 'login.messages.forgotPassword'}}</h2>
      {{#if errorMessage}}
        <div class="alert alert-danger form-signin-alert" role="alert">{{t 'login.messages.passwordError'}}</div>
      {{/if}}

      {{#if recoverySuccess}}
        <div class="alert alert-success form-signin-alert" role="alert">{{t 'login.messages.recoverySuccess'}}</div>
      {{/if}}

      {{#if recoveryFailure}}
        <div class="alert alert-success form-signin-alert" role="alert">{{t 'login.messages.recoverySuccess'}}</div>
      {{/if}}

      <div class="form-group">
        {{input id='identification' value=identification placeholder=(t 'login.labels.username') class='form-control'}}
      </div>

      <button class="btn btn-lg btn-primary btn-block" type="submit" onclick={{action 'recoverPassword'}}>
        {{t 'login.labels.forgotPassword'}}
      </button>
    </div>
  </form>
</div> <!-- /container -->
